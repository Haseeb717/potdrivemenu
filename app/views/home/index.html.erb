<div class="section-one"><!--section-one-->
	<div class="container-fluid"><!--container-fluid-->
		<div class="row wow fadeInDown"> <!--row-one-->
			<% @articles.each do |article| %>
				<div class="col-sm-6 col-md-3">
				    <div class="thumbnail hvr-sink">
				      <%= image_tag article.image_url,:alt=>"..." %>
				      <div class="caption">
				        <h3 class="title"> <%= link_to article.title.length > 70 ? article.title[0..70]+"..." : article.title,article.link,:target=>"blank" %></h3>
				        <p class="description"><%= article.summary.length > 200 ? article.summary[0..200]+"..." : article.summary %></p>
				        
				      </div>
				    </div>
				</div>
			<% end %>
		</div>

	</div><!--container-fluid-->
</div><!--section-one-->

                            	
